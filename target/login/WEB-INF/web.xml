<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Página de inicio -->
    <welcome-file-list>
        <welcome-file>login</welcome-file> <!-- Redirige al LoginServlet -->
    </welcome-file-list>

    <!-- ============================
         SERVLETS PRINCIPALES
         ============================ -->

    <!-- Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Registro -->
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>

    <!-- Home para administrador -->
    <servlet>
        <servlet-name>HomeAdminServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.HomeAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeAdminServlet</servlet-name>
        <url-pattern>/homeAdmin</url-pattern>
    </servlet-mapping>

    <!-- Home para estudiante -->
    <servlet>
        <servlet-name>HomeEstudianteServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.HomeEstudianteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeEstudianteServlet</servlet-name>
        <url-pattern>/homeEstudiante</url-pattern>
    </servlet-mapping>

    <!-- Reportar caso -->
    <servlet>
        <servlet-name>ReportarServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.ReportarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportarServlet</servlet-name>
        <url-pattern>/reportar</url-pattern>
    </servlet-mapping>

    <!-- Redirección JSP de reportes -->
    <servlet>
        <servlet-name>ReporteJspRedirectServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.ReporteJspRedirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReporteJspRedirectServlet</servlet-name>
        <url-pattern>/reporteRedirect</url-pattern>
    </servlet-mapping>

    <!-- Logout -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mycompany.login.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>
